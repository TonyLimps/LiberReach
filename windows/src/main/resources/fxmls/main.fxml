                        <MenuItem fx:id="fileSettingsMenuItem" mnemonicParsing="false" onAction="#onFileSettingsButtonAction" text="%main.menu.file.settings" />
                        <MenuItem fx:id="fileExitMenuItem" mnemonicParsing="false" onAction="#onFileExitButtonAction" text="%main.menu.file.exit" />
