                                    <children>
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <TextField fx:id="searchField" promptText="%main.textField.search" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="searchButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="%main.button.search" HBox.hgrow="NEVER" />
                                            </children>
                                        </HBox>
                                        <HBox VBox.vgrow="ALWAYS">
                                            <children>
                                                <ListView maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                <ScrollBar orientation="VERTICAL" HBox.hgrow="NEVER" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </items>
                        </SplitPane>
                        <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
                            <children>
                                <Button fx:id="downloadButton" mnemonicParsing="false" text="%main.button.download" />
                                <Button fx:id="uploadButton" mnemonicParsing="false" text="%main.button.upload" />
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
            </items>
