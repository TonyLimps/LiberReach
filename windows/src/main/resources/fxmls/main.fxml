            </menus>
        </MenuBar>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.15" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="1360.0" VBox.vgrow="ALWAYS">
