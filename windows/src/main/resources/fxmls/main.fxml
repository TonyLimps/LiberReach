                <SplitPane dividerPositions="0.9360313315926893" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL" HBox.hgrow="ALWAYS">
                    <items>
                        <SplitPane fx:id="mainSplitPane2" dividerPositions="0.815" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <items>
                                <!-- 文件浏览区域 - 设置优先扩展 -->
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <HBox maxHeight="23.0">
                                            <children>
                                                <Button fx:id="backButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="%main.button.back" />
