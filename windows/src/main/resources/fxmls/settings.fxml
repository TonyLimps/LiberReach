<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tonylimps.filerelay.windows.controllers.SettingsController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="188.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="563.0" minWidth="10.0" prefWidth="412.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label fx:id="languageLabel" text="%settings.label.language" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
      <ComboBox fx:id="languageComboBox" onAction="#onLanguageComboBoxAction" onMouseClicked="#onLanguageComboBoxClick" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.valignment="CENTER" />
      <Label fx:id="downloadPathLabel" text="%settings.label.downloadPath" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
         <children>
            <TextField fx:id="downloadPathField" promptText="%settings.textField.downloadPath" HBox.hgrow="ALWAYS" />
            <Button fx:id="browseDownloadPathButton" mnemonicParsing="false" text="%settings.button.browse">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label fx:id="tokenLabel" text="%settings.label.token" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
      <TextArea fx:id="tokenArea" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="token..." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets right="50.0" />
         </GridPane.margin></TextArea>
      <Label fx:id="tokenTimeRemainingLabel" text="%settings.label.tokenTimeRemaining" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
      <Label fx:id="timeRemainingLabel" text="time" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label fx:id="nameLabel" text="%settings.label.name" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <TextField fx:id="nameField" promptText="%settings.textField.name" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets right="50.0" />
         </GridPane.margin>
      </TextField>
      <Label fx:id="portLabel" text="%settings.label.port" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
      <TextField fx:id="portField" promptText="%settings.textField.port" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets right="50.0" />
         </GridPane.margin>
      </TextField>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
         <children>
            <Button fx:id="applyButton" mnemonicParsing="false" onAction="#apply" text="%settings.button.apply">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonAction" text="%settings.button.cancel">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</GridPane>
